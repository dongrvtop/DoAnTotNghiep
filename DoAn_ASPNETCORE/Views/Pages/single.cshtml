<!--content-->
<style>
    .img_btn{
        max-width:100px;
    }
    .btn_changeImg {
        width: 150px;
        height: 150px;
        border: solid 1px black;
        display: flex;
        justify-content: center;
        align-items: center;
        cursor: pointer;
        border-radius: 5px;
    }
    .box_btn_img{
        margin-top:2em;
        display:flex;
        justify-content:space-around;
    }
    .slides{
        list-style:none!important;
    }
    .btn_img_choosed {
        border: 1px solid red;
        display: flex;
        box-shadow: 0 5px 30px rgb(0 0 0 / 30%);
    }
</style>
<div class="content">
    <!--single-->
    <div class="single-wl3">
        <div class="container">
            <div class="single-grids">
                @*@foreach (var sanpham in ViewBag.SanPham)
        {*@
                <div class="col-md-9 single-grid">
                    <div clas="single-top">
                        <div class="single-left">
                            <div class="flexslider">
                                <ul class="slides">
                                    <script>
                                        @*var img_main = '~/images/'+@ViewBag.SanPham.Image;
                                        var img_lst = '~/images/' +@ViewBag.SanPham.Image_List;*@
                                        function ChooseImageMain() {
                                            $('.img_main').removeClass('hidden');
                                            $('.img_lst').addClass('hidden');
                                            $('.btn_main').addClass('btn_img_choosed');
                                            $('.btn_list').removeClass('btn_img_choosed');
                                        }
                                        function ChooseImageList() {
                                            $('.img_main').addClass('hidden');
                                            $('.img_lst').removeClass('hidden');
                                            $('.btn_main').removeClass('btn_img_choosed');
                                            $('.btn_list').addClass('btn_img_choosed');
                                        }
                                    </script>
                                    <li data-thumb="images/si.jpg" class="image_main">
                                        <div class="thumb-image"> 
                                            <img src="~/images/@ViewBag.SanPham.Image" data-imagezoom="true" class="img-responsive img_main"> 
                                            <img src="~/images/@ViewBag.SanPham.Image_List" data-imagezoom="true" class="img-responsive img_lst hidden">
                                        </div>
                                    </li>
                                </ul>
                            </div>
                            <div class="box_btn_img">
                                <div class="btn_changeImg btn_main btn_img_choosed" onclick="ChooseImageMain()"><img src="~/images/@ViewBag.SanPham.Image" alt="Alternate Text" class="img_btn"/></div>
                                <div class="btn_changeImg btn_list" onclick="ChooseImageList()"><img src="~/images/@ViewBag.SanPham.Image_List" alt="Alternate Text" class="img_btn" /></div>
                            </div>
                        </div>
                        <div class="single-right simpleCart_shelfItem">
                            <h4>@ViewBag.SanPham.TenSP</h4>
                            <div class="block">
                                <div class="starbox small ghosting"> </div>
                            </div>
                            <p class="price item_price">@ViewBag.SanPham.GiaMoi VND</p>
                            <div class="description">
                                <h3>Thông số sản phẩm: </h3>
                                @foreach(var mtn in ViewBag.SanPham.MoTaNgan.Split(". "))
                                {
                                    <p><span>@mtn</span> </p>
                                }
                            <h3>Mô tả:</h3>
                            <p>@ViewBag.SanPham.MoTa</p>
                            </div>
                            <div class="color-quality">
                                <h6>Quality :</h6>
                                <div class="quantity">
                                    <div class="quantity-select">
                                        <div class="entry value-minus1">&nbsp;</div>
                                        <div class="entry value1"><span>1</span></div>
                                        <div class="entry value-plus1 active">&nbsp;</div>
                                    </div>
                                </div>
                                <!--quantity-->
                                <script>
                                    $('.value-plus1').on('click', function () {
                                        var divUpd = $(this).parent().find('.value1'), newVal = parseInt(divUpd.text(), 10) + 1;
                                        divUpd.text(newVal);
                                    });

                                    $('.value-minus1').on('click', function () {
                                        var divUpd = $(this).parent().find('.value1'), newVal = parseInt(divUpd.text(), 10) - 1;
                                        if (newVal >= 1) divUpd.text(newVal);
                                    });
                                </script>
                                <!--quantity-->
                            </div>
                            <div class="women">
                                @if (ViewBag.SanPham.Size.ToString() == "1")
                                {
                                    <span class="size">Size: Bé </span>
                                }
                                else
                                {
                                    <span class="size">Size: Lớn </span>
                                }
                                @*<span class="size">@ViewBag.SanPham.Size </span>*@
                                <a href="/addcart/@ViewBag.SanPham.ID" data-text="Add To Cart" class="my-cart-b item_add">Add To Cart</a>
                            </div>
                            <div class="social-icon">
                                <a href="#"><i class="icon"></i></a>
                                <a href="#"><i class="icon1"></i></a>
                                <a href="#"><i class="icon2"></i></a>
                                <a href="#"><i class="icon3"></i></a>
                            </div>
                        </div>
                        <div class="clearfix"> </div>
                    </div>
                </div>
                @*}*@

                <div class="col-md-3 single-grid1">
                    <h3>Sản phẩm có thể bạn yêu thích<h3>
                    @await Component.InvokeAsync("Single", new { id = ViewBag.id })

                </div>

                <div class="clearfix"> </div>
            </div>
      
        </div>
    </div>
    <!--single-->
    <div class="container">
        <h3 class="tittle1">Sản phẩm bán chạy</h3>
        <div class="arrivals-grids">
            @foreach (var item in ViewBag.BestSellers)
            {
                <div class="col-md-3 arrival-grid simpleCart_shelfItem">
                    <div class="grid-arr">
                        <div class="grid-arrival">
                            <figure>
                                <a href="#" class="new-gri" data-toggle="modal" data-target="#myModal1">
                                    <div class="grid-img">
                                        <img src="~/images/@item.Image" class="img-responsive" alt="">
                                    </div>
                                    <div class="grid-img">
                                        <img src="~/images/@item.Image" class="img-responsive" alt="">
                                    </div>
                                </a>
                            </figure>
                        </div>
                        <div class="ribben">
                            <p>Mới</p>
                        </div>
                        <div class="ribben1">
                            <p>Giảm giá</p>
                        </div>
                        <div class="block">
                            <div class="starbox small ghosting"> </div>
                        </div>
                        <div class="women">
                            <h6><a href="~/pages/single/@item.ID">@item.TenSP</a></h6>
                            <span class="size">@item.Size</span>
                            <p><del>@item.Gia VND</del><em class="item_price">@item.GiaMoi VND</em></p>
                            <a href="/addcart/@item.ID" data-text="Add To Cart" class="my-cart-b item_add">Thêm vào giỏ hàng</a>
                        </div>

                    </div>
                </div>

            }
            <div class="clearfix"></div>
        </div>

    </div>
    <!--new-arrivals-->
</div>
<!--content-->